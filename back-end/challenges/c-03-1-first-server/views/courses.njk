{% extends "layout.njk" %}

{% block styles %}
  <link rel="stylesheet" href="styles/courses.css"/>

  <link rel="stylesheet" href="styles/modal.css"/>
{% endblock styles %}

{% block content %}
  <section class="cards">
    {% for item in items %}
      <div id="{{item.id}}" class="card">
        <div class="card_image-container">
          <img src="{{item.img.src}}" alt="Imagem do curso {{item.img.alt}}"/>
        </div>
        <div class="card_content">
          <p>
            <strong>
              {{item.description.strong}}
            </strong>
            {{item.description.normal}}
          </p>
        </div>
        <div class="card_info">
          <p>{{item.modules}}</p>
          <p class="card_price">
            {{item.price}}
          </p>
        </div>
      </div>
    {% endfor %}
  </section>
{% endblock content %}

{% block modal %}
  <div class="modal-overlay">
    <div class="modal">
      <a class="close-modal">
        <span class="material-icons">
          close
        </span>
      </a>

      <a class="maximize-modal">
        <span class="material-icons">
          fullscreen
        </span>
      </a>

      <a class="maximize-modal-exit hidden">
        <span class="material-icons">
          fullscreen_exit
        </span>
      </a>

      <div class="modal-content">
        <iframe src="" frameborder="0"></iframe>
      </div>
    </div>
  </div>
{% endblock modal %}

{% block scripts %}
  <script src="/scripts/script.js"></script>
{% endblock scripts %}