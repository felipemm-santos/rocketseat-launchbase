{% endblock styles %}

{% block content %}
  <div class="content">
    <img src="{{about.avatar_url}}" alt="Imagemm de {{about.name}}"/>
    <h1>{{about.name}}</h1>
    <h3>{{about.role}}</h3>
    <p>
      {{about.description}}
    </p>

